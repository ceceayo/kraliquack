@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        Universal Game Server
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
        <FluentToastProvider MaxToastCount="10" Position="ToastPosition.TopLeft" @rendermode="InteractiveServer"/>
    </FluentStack>
    <FluentFooter>
        <span>UGS is constantly in development - some bugs might occur.</span>
        <FluentSpacer />
        <span>&copy; JJSW 2025 All Rights Reserved.</span>
    </FluentFooter>
</FluentLayout>


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
